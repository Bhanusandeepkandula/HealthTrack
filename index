                <input type="checkbox" id="themeToggle">
                <span class="slider"></span>
            </label>
        </div>

        <h1>Health Tracker</h1>

        <label for="diseaseSelect">Select Disease</label>
        <select id="diseaseSelect">
            <option value="">--Select Disease--</option>
            <option value="Cancer">Cancer</option>
            <option value="HIV">HIV</option>
            <option value="Ebola">Ebola</option>
            <option value="Rabies">Rabies</option>
            <option value="Tuberculosis">Tuberculosis</option>
            <option value="Diabetes">Diabetes</option>
            <option value="COPD">COPD</option>
            <option value="Lupus">Lupus</option>
            <option value="RheumatoidArthritis">Rheumatoid Arthritis</option>
            <option value="Dengue">Dengue</option>
            <option value="Influenza">Influenza</option>
            <option value="Asthma">Asthma</option>
            <option value="Migraine">Migraine</option>
            <option value="Acne">Acne</option>
            <option value="Allergies">Allergies</option>
            <option value="Arthritis">Arthritis</option>
            <option value="Stroke">Stroke</option>
            <option value="HeartDisease">Heart Disease</option>
            <option value="ChronicFatigue">Chronic Fatigue</option>
        </select>
        <button id="addDisease">Add Disease</button>

        <div class="disease-card-container" id="diseaseList"></div>

        <div class="input-group">
            <label for="height">Height (cm)</label>
            <input type="number" id="height" placeholder="Enter height in cm">
        </div>

        <div class="input-group">
            <label for="weight">Weight</label>
            <input type="number" id="weight" placeholder="Enter weight">
        </div>

        <div class="weight-unit-container">
            <label for="weightUnit">Select Weight Unit</label>
            <select id="weightUnit">
                <option value="kg">Kilograms (kg)</option>
                <option value="lbs">Pounds (lbs)</option>
            </select>
        </div>

        <div class="input-group">
            <label for="bmi">BMI</label>
            <input type="number" id="bmi" placeholder="Enter your BMI">
        </div>

        <button id="calculateScore">Calculate Health</button>

        <div class="progress-bar">
            <div class="progress" id="progressBar">
                <div class="progress-label" id="progressLabel">0%</div>
            </div>
