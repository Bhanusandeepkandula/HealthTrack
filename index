        <div class="result-box">
            <h3>Health Score:</h3>
            <p id="healthScore"></p>
            <h3>Health Status:</h3>
            <p id="healthStatus"></p>
            <h3>BMI:</h3>
            <p id="bmiResult"></p>
            <h3>Recommendations:</h3>
            <ul id="recommendations"></ul>
        </div>

        <p class="note">Note: Consult a specialist for any serious health issues.</p>
        <ul class="consultation-links">
            <li><a href="#">Consult a Specialist</a></li>
            <li><a href="#">Learn More</a></li>
        </ul>
    </div>

    <script>
        const diseaseScores = {
            Cancer: 100, HIV: 90, Ebola: 95, Rabies: 95, Tuberculosis: 85,
            Diabetes: 70, COPD: 75, Lupus: 80, RheumatoidArthritis: 65,
            Dengue: 60, Influenza: 30, Asthma: 40, Migraine: 20, Acne: 10, Allergies: 15,
            Arthritis: 55, Stroke: 85, HeartDisease: 90, ChronicFatigue: 65
        };

        const diseaseRecommendations = {
            Cancer: "Consult an oncologist immediately. Maintain a healthy diet and avoid smoking.",
            HIV: "Start antiretroviral therapy (ART) and practice safe sex. Regular check-ups are essential.",
            Ebola: "Seek immediate medical attention. Isolate yourself to prevent spreading the virus.",
            Rabies: "Get vaccinated immediately. Avoid contact with animals showing unusual behavior.",
            Tuberculosis: "Complete the full course of antibiotics. Maintain good hygiene and ventilation.",
            Diabetes: "Monitor blood sugar levels regularly. Follow a balanced diet and exercise daily.",
            COPD: "Avoid smoking and air pollutants. Use prescribed inhalers and oxygen therapy if needed.",
            Lupus: "Take prescribed medications. Avoid sun exposure and manage stress.",
            RheumatoidArthritis: "Follow anti-inflammatory medications. Engage in low-impact exercises.",
            Dengue: "Stay hydrated and rest. Seek medical care if symptoms worsen.",
            Influenza: "Get vaccinated annually. Rest and stay hydrated.",
            Asthma: "Use inhalers as prescribed. Avoid triggers like pollen and smoke.",
            Migraine: "Identify and avoid triggers. Use prescribed medications for relief.",
            Acne: "Maintain a skincare routine. Avoid oily foods and consult a dermatologist.",
            Allergies: "Avoid allergens. Use antihistamines and consult an allergist.",
            Arthritis: "Engage in physical therapy. Use anti-inflammatory medications.",
            Stroke: "Seek immediate medical attention. Follow rehabilitation programs.",
            HeartDisease: "Maintain a heart-healthy diet. Exercise regularly and avoid smoking.",
            ChronicFatigue: "Get adequate rest. Follow a balanced diet and manage stress."
        };

        let selectedDiseases = [];

        // Add Disease to the list
        document.getElementById('addDisease').addEventListener('click', function () {
            const diseaseSelect = document.getElementById('diseaseSelect');
            const disease = diseaseSelect.value;

            if (disease && !selectedDiseases.includes(disease)) {
                selectedDiseases.push(disease);
                updateDiseaseList();
            } else if (!disease) {
                alert("Please select a disease to add.");
            } else {
                alert("Disease already added.");
            }
        });

        // Update disease list UI
        function updateDiseaseList() {
            const diseaseList = document.getElementById('diseaseList');
            diseaseList.innerHTML = selectedDiseases
                .map(disease => `
                    <div class="disease-card">
                        <span>${disease}</span>
                        <span class="cancel" onclick="removeDisease('${disease}')">Remove</span>
                    </div>
                `)
                .join('');
        }

        // Remove disease from the list
        function removeDisease(disease) {
            selectedDiseases = selectedDiseases.filter(d => d !== disease);
            updateDiseaseList();
        }

        // Calculate Health Score
        document.getElementById('calculateScore').addEventListener('click', function () {
            const height = parseFloat(document.getElementById('height').value);
            const weight = parseFloat(document.getElementById('weight').value);
            const weightUnit = document.getElementById('weightUnit').value;
            const bmi = parseFloat(document.getElementById('bmi').value);

            // Convert weight to kg if in lbs
            const weightInKg = weightUnit === 'lbs' ? weight * 0.453592 : weight;

            // Calculate BMI if not provided
            const calculatedBMI = bmi || (weightInKg / ((height / 100) ** 2)).toFixed(2);

            // Display BMI result
            document.getElementById('bmiResult').textContent = calculatedBMI;

            // Calculate Health Score
            let healthScore = 100;
            selectedDiseases.forEach(disease => {
                healthScore -= diseaseScores[disease] || 0;
            });

            // Adjust health score based on BMI
            if (calculatedBMI < 18.5) {
                healthScore -= 10; // Underweight
            } else if (calculatedBMI >= 25) {
                healthScore -= 15; // Overweight
            }

            // Update Health Score and Progress Bar
            document.getElementById('healthScore').textContent = healthScore.toFixed(2);
            document.getElementById('progressBar').style.width = `${healthScore}%`;
            document.getElementById('progressLabel').textContent = `${healthScore.toFixed(2)}%`;
            document.getElementById('progressBar').style.backgroundColor = healthScore >= 70 ? '#4CAF50' : healthScore >= 40 ? '#FFC107' : '#F44336';

            // Update Health Status
            let healthStatus = '';
            if (healthScore >= 70) {
                healthStatus = 'Healthy';
            } else if (healthScore >= 40) {
                healthStatus = 'Moderate';
            } else {
                healthStatus = 'Critical';
            }
            document.getElementById('healthStatus').textContent = healthStatus;

            // Update Recommendations
            const recommendations = [];
            selectedDiseases.forEach(disease => {
                recommendations.push(diseaseRecommendations[disease]);
            });
            if (healthScore < 70) {
                recommendations.push('Consult a doctor for a detailed health checkup.');
            }
            if (calculatedBMI < 18.5) {
                recommendations.push('Consider gaining weight through a balanced diet.');
            } else if (calculatedBMI >= 25) {
                recommendations.push('Consider losing weight through diet and exercise.');
            }
            document.getElementById('recommendations').innerHTML = recommendations.map(r => `<li>${r}</li>`).join('');
        });

        // Dark Mode / Light Mode Toggle
        const themeToggle = document.getElementById('themeToggle');
        themeToggle.addEventListener('change', function () {
            document.body.classList.toggle('dark-mode', themeToggle.checked);
        });
    </script>
</body>
</html>
